{% import "@SyliusUi/Macro/flags.html.twig" as flags %}

<address {{ sylius_test_html_attribute('address-context', "%s %s"|format(address.firstName, address.lastName)) }}>
    {% if address.company is not null %}
        <strong>{{ address.company }}</strong><br>
    {% endif %}

    {% if address.service is not null %}
        {{ address.service }}<br/>
    {% endif %}

    <strong {{ sylius_test_html_attribute('full-name ', "%s %s"|format(address.firstName, address.lastName)) }}>{{ address.firstName }} {{ address.lastName }}</strong><br>

    {% if address.locality is not null %}
        {{ address.locality }}<br/>
    {% endif %}

    {{ address.street }}<br/>

    {{ address.postcode }} {{ address.city }}<br/>

    {% if address|sylius_province_name is not empty %}
        {{ address|sylius_province_name }}<br/>
    {% endif %}

    {{ flags.fromCountryCode(address.countryCode) }}
    {{ address.countryCode|sylius_country_name|upper }}<br/>

    {% if address.phoneNumber is not null %}
        {{ "monsieurbiz_coliship.ui.address.phonenumber"|trans({"%number%": address.phoneNumber}) }}<br/>
    {% endif %}

    {% if address.entrance is not null %}
        {{ "monsieurbiz_coliship.ui.address.entrance"|trans({"%entrance%": address.entrance}) }}
        <br/>
    {% endif %}
    {% if address.floor is not null %}
        {{ "monsieurbiz_coliship.ui.address.floor"|trans({"%floor%": address.floor}) }}
        <br/>
    {% endif %}

    {% if address.doorCode1 is not null %}
        {{ "monsieurbiz_coliship.ui.address.doorCode1"|trans({"%code%": address.doorCode1}) }}
        <br/>
    {% endif %}
    {% if address.doorCode2 is not null %}
        {{ "monsieurbiz_coliship.ui.address.doorCode2"|trans({"%code%": address.doorCode2}) }}
        <br/>
    {% endif %}
    {% if address.intercom is not null %}
        {{ "monsieurbiz_coliship.ui.address.intercom"|trans({"%intercom%": address.intercom}) }}
        <br/>
    {% endif %}

    {% if address.shippingInstructions is not null %}
        {{ "monsieurbiz_coliship.ui.address.shippingInstructions"|trans({"%instructions%": address.shippingInstructions}) }}
    {% endif %}
</address>

