<div class="two fields">
    {{ form_row(form.firstName) }}
    {{ form_row(form.lastName) }}
</div>
<div class="two fields">
    {{ form_row(form.company) }}
    {{ form_row(form.service) }}
</div>
<div class="two fields">
    {{ form_row(form.street) }}
    {{ form_row(form.entrance) }}
</div>
<div class="two fields">
    {{ form_row(form.locality) }}
    {{ form_row(form.floor) }}
</div>

{{ form_row(form.countryCode) }}
<div class="province-container field" data-url="{{ path('sylius_admin_ajax_render_province_form') }}">
    {% if form.provinceCode is defined %}
        {{ form_row(form.provinceCode, {'attr': {'class': 'ui dropdown'}}) }}
    {% endif %}
</div>

<div class="two fields">
    {{ form_row(form.postcode) }}
    {{ form_row(form.city) }}
</div>

<div class="two fields">
    {{ form_row(form.phoneNumber) }}
    <div class="three field fields">
        {{ form_row(form.doorCode1) }}
        {{ form_row(form.doorCode2) }}
        {{ form_row(form.intercom) }}
    </div>
</div>

{{ form_row(form.shippingInstructions) }}
